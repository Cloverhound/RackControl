<p id="notice"><%= notice %></p>

<h1>Lab Scenarios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labs.each do |lab| %>
      <tr>
        <td><%= lab.name %></td>
        <td><%= lab.description %></td>
        <td><%= link_to 'Restore', lab_rack_lab_restore_path(:lab_id => lab.id) %></td>
        <td><%= link_to 'Configure / View', lab_rack_lab_path(:id => lab.id) %></td>
        <td><%= link_to 'Edit', edit_lab_rack_lab_path(:id => lab.id) %></td>
        <td><%= link_to 'Destroy', lab_rack_lab_path(:id => lab.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lab Scenario', new_lab_rack_lab_path %><br/>
<%= link_to 'Back to Lab Rack', lab_racks_path %>
